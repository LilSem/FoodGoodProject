<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
    android:clickable="true"
    android:background="?attr/selectableItemBackground">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_restaraunt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="7dp"
        card_view:contentPaddingBottom="10dp"
        card_view:contentPaddingTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_restaurant_logo"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tw_kitchen"
                android:layout_gravity="center"
                android:adjustViewBounds="false"
                android:cropToPadding="true"
                android:src="@drawable/fg_logo"/>

            <TextView
                android:id="@+id/tw_kitchen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tw_restaurant_name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="66dp"
                android:text="Кухня"
                android:textColor="@color/colorTextGray"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/tw_restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Название"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>


            <TextView
                android:id="@+id/tw_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tw_salary"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:text="Delivery"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/tw_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_restaurant_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:text="Salary"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
