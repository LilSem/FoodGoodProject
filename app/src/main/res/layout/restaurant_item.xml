<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_height="wrap_content"
              android:layout_width="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:contentPadding="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ImageView
                android:id="@+id/iv_restaurant_logo"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:adjustViewBounds="false"
                android:cropToPadding="true"
                android:src="@drawable/fg_logo"
                android:layout_below="@+id/tw_kitchen"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/tw_kitchen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tw_restaurant_name"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="66dp"
                android:layout_marginTop="3dp"
                android:text="Кухня"
                android:textColor="@color/colorText"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tw_restaurant_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название"
                android:textColor="@color/colorText"
                android:textSize="20sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tw_min_sum_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tw_delivery_salary"
                android:layout_marginTop="17dp"
                android:text="@string/min_sum_buy"
                android:textColor="@color/colorText"/>

            <TextView
                android:id="@+id/tw_delivery_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Delivery_Sum"
                android:textColor="@color/colorText"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/iv_restaurant_logo"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/tw_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tw_min_sum_order"
                android:layout_alignStart="@+id/tw_salary"
                android:text="Delivery"
                android:textColor="@color/colorText"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tw_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tw_min_sum_order"
                android:layout_alignBottom="@+id/tw_min_sum_order"
                android:layout_toEndOf="@+id/tw_restaurant_name"
                android:text="Salary"
                android:textColor="@color/colorText"
                android:textSize="18dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
